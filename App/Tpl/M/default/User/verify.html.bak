<include file="Pub:header" />
<div class="main">
 <div class="box7">
   <div class="box7_title"><a href="javascript:history.back()"><img src="/style/mobile/images/table_but.png"/></a>实名认证</div>
   <if condition="$id_status eq 1">
   您已完成实名认证
   <else/>
    <form action="" method="post" name="cashForm" id="cashForm">
   <table cellpadding="0" cellspacing="0" border="0">
    <tr align="left" height="28"><td>真实姓名：</td><td><input type="text" name='realname' id="realname" class="box7_wbk" /></td></tr>
    <tr align="left" height="28"><td>身份证号：</td><td><input type="text" name='idcardno' id="idcardno" class="box7_wbk" /></td></tr>
    <tr align="center" height="54"><td colspan="2"><input type="button" id="dobutton" class="butt" value="提交"/></td></tr>
   </table>
   </form>
   </if>
 </div>
 
</div>
<script language="javascript">
$(function() {
    $("#dobutton").click(function() {
        var e = $("#realname").val(),
            t = $("#idcardno").val(),
            r = "realname=" + e + "&idcardno=" + t;
        if ($.trim(e) == "") return Apprise("<font color=red>请输入真实姓名!</font>"), !1;
        if ($.trim(t) == "") return Apprise("<font color=red>请输入身份证号!</font>"), !1;
        $.ajax({
            type: "POST",
            url: "",
            data: r,
            success: function(e) {
                e == "TRUE" ? (Apprise("恭喜您实名认证成功！"), $("#apprise-btn-confirm").click(function() {
                    window.location.href = "{:U('M/user/index')}"
                })) : Apprise("<font color=red>" + e + "</font>")
            },
            error: function(e) {
                Apprise("<font color=red>提交发生错误！请重试</font>")
            }
        })
    })
})
</script>
<include file="Pub:footer" /> 
